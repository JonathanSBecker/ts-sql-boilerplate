{
  "name": "Typescript/SQL Boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for Typescript, Node/Express, and SQL",
  "main": "src/index.ts",
  "scripts": {
    "start-server-prod": "NODE_ENV=production npx tsx --watch-path=./src src/index.ts",
    "start": "npm run db-start; npm run start-server-prod",
    "dev": "npm run https-proxy; npm run db-start; npm run start-server-dev;",
    "start-server-dev": "NODE_ENV=local npx tsx --watch-path=./src src/index.ts",
    "test": "npm run pretest; npm run executeTests; npm run posttest;",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "db-start": "docker-compose up -d boilerplate-db dbmate-up --remove-orphans",
    "db-no-migrate": "docker-compose up -d boilerplate-db --remove-orphans",
    "db-stop": "docker compose down boilerplate-db",
    "migrate": "docker compose up dbmate-up",
    "db-revert": "docker compose run --rm dbmate-down",
    "sql-cli": "docker compose exec boilerplate-db mysql -u gemini -pP0werOverwhelm!ng boilerplate",
    "executeTests": "mocha -r ts-node/register --extensions ts src/**/*.test.ts",
    "pretest": "docker-compose up test-db dbmate-up --remove-orphans -d",
    "posttest": "docker-compose run --rm cleanup-test-db && docker-compose down --volumes --remove-orphans",
    "https-proxy": "local-ssl-proxy -n 127.0.0.1 -s 3300 -t 1776 -c ssl/localhost.pem -k ssl/localhost-key.pem"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "author": "Jonathan Becker",
  "license": "None",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^5.0.0",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.32",
    "@types/nodemailer": "^6.4.17",
    "eslint-plugin-import": "^2.31.0",
    "express": "^4.21.2",
    "jest": "^30.2.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.27.5",
    "@types/cors": "^2.8.19",
    "@types/node-cron": "^3.0.11",
    "argon2": "^0.41.1",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.0",
    "nodemailer": "^7.0.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "files": [
    "src"
  ]
}
